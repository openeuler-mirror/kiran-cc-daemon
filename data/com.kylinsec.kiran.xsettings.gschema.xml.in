<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="@PROJECT_NAME@">
    <schema id="com.kylinsec.kiran.xsettings" path="/com/kylinsec/kiran/xsettings/">
        <key name="net-double-click-time" type="i">
            <default>400</default>
            <description>Maximum time allowed between two clicks for them to be considered a double click (in milliseconds).</description>
        </key>
        <key name="net-double-click-distance" type="i">
            <default>5</default>
            <description>Maximum distance allowed between two clicks for them to be considered a double click (in pixels).</description>
        </key>
        <key name="net-dnd-drag-threshold" type="i">
            <default>8</default>
            <description>Number of pixels the cursor can move before dragging.</description>
        </key>
        <key name="net-cursor-blink" type="b">
            <default>true</default>
            <description>Whether the cursor should blink.</description>
        </key>
        <key name="net-cursor-blink-time" type="i">
            <default>1200</default>
            <description>Length of the cursor blink cycle, in milleseconds.</description>
        </key>
        <key name="net-theme-name" type="s">
            <default>'Kiran-dark'</default>
            <description>Name of gtk theme to use.</description>
        </key>
        <key name="net-icon-theme-name" type="s">
            <default>'Kiran'</default>
            <description>Name of icon theme to use for icons.</description>
        </key>
        <key name="net-enable-event-sounds" type="b">
            <default>false</default>
            <description>Whether to play sounds on user events.</description>
        </key>
        <key name="net-sound-theme-name" type="s">
            <default>'freedesktop'</default>
            <description>The XDG sound theme to use for event sounds.</description>
        </key>
        <key name="net-enable-input-feedback-sounds" type="b">
            <default>false</default>
            <description>Whether to play sounds on input events.</description>
        </key>
        <key name="xft-antialias" type="i">
            <default>1</default>
            <description>Whether to antialias Xft fonts; 0=no, 1=yes, -1=default.</description>
        </key>
        <key name="xft-hinting" type="i">
            <default>1</default>
            <description>Whether to hint Xft fonts; 0=no, 1=yes, -1=default.</description>
        </key>
        <key name="xft-hint-style" type="s">
            <default>'hintslight'</default>
            <description>What degree of hinting to use; "hintnone", "hintslight", "hintmedium", or "hintfull".</description>
        </key>
        <key name="xft-rgba" type="s">
            <default>'rgb'</default>
            <description>Type of subpixel antialiasing; "none", "rgb", "bgr", "vrgb", "vbgr".</description>
        </key>
        <key name="xft-dpi" type="i">
            <default>-1</default>
            <description>Resolution for Xft, in 1024 * dots/inch. -1 to use default value. Do not modify it manually.</description>
        </key>
        <key name="font-dpi" type="d">
            <default>96.00</default>
            <description>The resolution used for converting font sizes to pixel sizes, in dots per inch.</description>
        </key>
        <key name="gtk-cursor-theme-name" type="s">
            <default>'Kiran'</default>
            <description>Name of the cursor theme.</description>
        </key>
        <key name="gtk-cursor-theme-size" type="i">
            <default>24</default>
            <description>Size of the cursor referenced by cursor_theme.</description>
        </key>
        <key name="gtk-font-name" type="s">
            <default>'Noto Sans CJK SC 10'</default>
            <description>Name of default font to use.</description>
        </key>
        <key name="gtk-key-theme-name" type="s">
            <default>'Default'</default>
            <description>Name of key theme RC file to load.</description>
        </key>
        <key name="gtk-toolbar-style" type="s">
            <default>'both-horiz'</default>
            <description>Whether default toolbars have text only, text and icons, icons only, etc.</description>
        </key>
        <key name="gtk-toolbar-icons-size" type="s">
            <default>'large-toolbar'</default>
            <description>Size of icons in default toolbars.</description>
        </key>
        <key name="gtk-im-preedit-style" type="s">
            <default>'callback'</default>
            <description>How to draw the input method preedit string.</description>
        </key>
        <key name="gtk-im-status-style" type="s">
            <default>'callback'</default>
            <description>How to draw the input method statusbar.</description>
        </key>
        <key name="gtk-im-module" type="s">
            <default>''</default>
            <description>Name of the input method module used by GTK+.</description>
        </key>
        <key name="gtk-menu-images" type="b">
            <default>true</default>
            <description>Whether images should be shown in menus.</description>
        </key>
        <key name="gtk-button-images" type="b">
            <default>true</default>
            <description>Whether stock icons should be shown in buttons.</description>
        </key>
        <key name="gtk-menubar-accel" type="s">
            <default>'F10'</default>
            <description>The accelerator for moving the focus to the menubar.</description>
        </key>
        <key name="gtk-color-scheme" type="s">
            <default>''</default>
            <description>A '\n' separated list of "name:color" as defined by the 'gtk-color-scheme' setting</description>
        </key>
        <key name="gtk-file-chooser-backend" type="s">
            <default>'gio'</default>
            <summary>Module to use as the filesystem model for the GtkFileChooser widget.  Possible values are "gio" and "gtk+".</summary>
        </key>
        <key name="gtk-decoration-layout" type="s">
            <default>'menu:minimize,maximize,close'</default>
            <description>This setting determines which buttons should be put in the titlebar of client-side decorated windows, and whether they should be placed at the left of right.</description>
        </key>
        <key name="gtk-shell-shows-app-menu" type="b">
            <default>false</default>
            <description>This setting determines where application menu will be displayed - in a window or on a panel with MenuModel protocol.</description>
        </key>
        <key name="gtk-shell-shows-menubar" type="b">
            <default>false</default>
            <description>This setting determines where window menubars will be displayed - in a window or on a panel with MenuModel protocol.</description>
        </key>
        <key name="gtk-show-input-method-menu" type="b">
            <default>true</default>
            <description>Whether the context menus of entries and text views  should offer to change the input method.</description>
        </key>
        <key name="gtk-show-unicode-menu" type="b">
            <default>true</default>
            <description>Whether the context menus of entries and text views  should offer to insert control characters.</description>
        </key>
        <key name="gtk-automatic-mnemonics" type="b">
            <default>true</default>
            <description>Whether mnemonics should be automatically shown and hidden when the user presses the Alt key.</description>
        </key>
        <key name="gtk-enable-primary-paste" type="b">
            <default>true</default>
            <description>If true, gtk+ uses the primary paste selection, usually triggered by a middle mouse button click.</description>
        </key>
        <key name="gtk-enable-animations" type="b">
            <default>true</default>
            <description>Whether to enable toolkit-wide animations.</description>
        </key>
        <key name="gtk-dialogs-use-header" type="b">
            <default>false</default>
            <description>Whether builtin GTK+ dialogs such as the file chooser, the color chooser or the font chooser will
            use a header bar at the top to show action widgets, or an action area at the bottom.</description>
        </key>
        <key name="window-scaling-factor" type="i">
            <default>0</default>
            <range min="0" max="2"/>
            <description>This controls the GTK scale factor that maps from window coordinates to the actual device pixels.</description>
        </key>
        <key name="window-scaling-factor-qt-sync" type="b">
            <default>true</default>
            <description>This setting determines whether MATE controls the scale factor for QT applications.</description>
        </key>
    </schema>
</schemalist>
