<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="@PROJECT_NAME@">
    <enum id="com.kylinsec.kiran.display.display-style">
        <value value="0" nick="mirrors" />
        <value value="1" nick="extend" />
        <value value="2" nick="custom" />
        <value value="3" nick="auto" />
    </enum>

    <schema id="com.kylinsec.kiran.display" path="/com/kylinsec/kiran/display/">

        <key name="display-style" enum="com.kylinsec.kiran.display.display-style">
            <default>'auto'</default>
            <description>Layout of connected monitors in the screen.</description>
        </key>

        <key name="dynamic-scaling-window" type="b">
            <default>false</default>
            <description>It takes effect immediately when the scaling factor of window is changed.</description>
        </key>

        <key name="screen-changed-adaptation" type="b">
            <default>true</default>
            <description>Set whether to adapt to screen changes </description>
        </key>

        <key name="max-screen-record-number" type="i">
            <default>100</default>
            <description>Set max screen record number while save config.</description>
        </key>

    </schema>
</schemalist>
